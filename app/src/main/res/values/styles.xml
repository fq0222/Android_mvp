<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--    全屏的主题设置-->
    <style name="FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
<!--        在Theme.AppCompat.Light.NoActionBar中的windowNoTitle属性也可以实现全屏功能-->
<!--        <item name="windowNoTitle">true</item>-->
    </style>

<!--    测试抽出样式，用于复用-->
    <style name="video_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="main_tab_rb_style">
        <item name="android:textColor">@drawable/selector_main_top_tab_shanghai_textcolor</item>
        <item name="android:drawablePadding">@dimen/dp_2</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>